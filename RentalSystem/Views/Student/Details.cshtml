@model RentalSystemData.Entities.Student

@{
    ViewData["Title"] = "Details";
}

<h4>Student details form</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Details">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                @Html.DisplayFor(modelItem => modelItem.Name)
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                @Html.DisplayFor(modelItem => modelItem.FirstName)
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                @Html.DisplayFor(modelItem => modelItem.LastName)
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                @Html.DisplayFor(modelItem => modelItem.Age)
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Department" class="control-label"></label>
                @Html.DisplayFor(modelItem => modelItem.Department.Name)
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
            @*  <div class="form-group">
                @Html.LabelFor(model => model.DepartmentId, "Id", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                @Html.DropDownList("DepartmentID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DepartmentId, "", new { @class = "text-danger" })
                </div>
                </div>*@
            @*   <div class="form-group">
                @Html.Label("emp category")
                @Html.DropDownListFor(model => model.DepartmentId, new SelectList(Model., "Id", "Name"), "", new { @class = "form-control", @style = "width: 100%" })
                </div>*@
            <div class="form-row">
                <div class="form-group col-md-6">
                    <a asp-action="AddOrEdit" asp-route-id="@Model.Id" class="btn btn-secondary btn-block"><i class="fa fa-table"></i> Edit</a>
                </div>
                <div class="form-group col-md-6">
                    <a asp-action="Index" class="btn btn-secondary btn-block"><i class="fa fa-table"></i> Back to List</a>
                </div>
                <div class="form-group col-md-6">
                    <a href="@Url.Action("AddCertification", "Certification", new { studentId = Model.Id })" class="btn btn-primary pull-right mr-0">
                        <small>Add certification</small>
                    </a>
                    @if (Model.Id != null)
                    {
                        @foreach (var item in Model.Certifications.Where(x => x.StudentId == Model.Id))
                        {
                            @*@Html.DisplayFor(modelItem => item.Name)*@ @item.Name <br />
                        }
                    }

                    @*                    <a asp-action="AddCertification" asp-controller="Certification" asp-route-id="@Model.Id" class="btn btn-secondary btn-block"><i class="fa fa-table"></i>Add certification</a>
                    *@
                </div>
                  <div class="form-group col-md-6">
                    <a href="@Url.Action("CourseList", "Enrollment", new { studentId = Model.Id })" class="btn btn-primary pull-right mr-0">
                        <small>Add course</small>
                    </a>
                    @if (Model.Id != null)
                    {
                        @foreach (var item in Model.Enrollments.Where(x => x.StudentId == Model.Id))
                        {
                            @item.Name <br />
                        }
                    }

                    @*                    <a asp-action="AddCertification" asp-controller="Certification" asp-route-id="@Model.Id" class="btn btn-secondary btn-block"><i class="fa fa-table"></i>Add certification</a>
                    *@
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}